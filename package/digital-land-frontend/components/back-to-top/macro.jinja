{% macro backToTop(params) %}
{% set anchor = params.anchor if params.anchor else "top" %}
<div class="back-to-top back-to-top--at-bottom" data-module="back-to-top">
    <a class="govuk-link govuk-link--no-visited-state back-to-top__link" href="#{{ anchor }}">
      <svg role="presentation" focusable="false" class="back-to-top__icon" xmlns="http://www.w3.org/2000/svg" width="13" height="17" viewBox="0 0 13 17">
        <path fill="currentColor" d="M6.5 0L0 6.5 1.4 8l4-4v12.7h2V4l4.3 4L13 6.4z"></path>
      </svg>{{ params.text if params.text else "Back to top" }}
    </a>
</div>
{% endmacro %}